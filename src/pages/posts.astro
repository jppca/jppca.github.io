---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const lang = 'es'; // This will be obtained from the URL or from a language selector.

const posts = (await getCollection('posts'))
  .filter(post => post.data.lang === lang)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout
	title="My Posts | JP "
	description="Learn about Jeanine White's most recent projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Posts in My Web Site"
				tagline="See my most recent projects and publications on technology."
				align="start"
			/>
			<Grid variant="offset">
				{
					posts.map((post) => (
						<li>
							<PortfolioPreview project={post} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
